@using Validation.Web.Models;
@model RegistrationViewModel

@{
    ViewBag.Title = "New User Registration";
}

<h2>New User Registration</h2>

<form asp-controller="users" asp-action="register" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName" class="form-control" placeholder="enter first name" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" class="form-control" placeholder="enter last name" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" placeholder="enter email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmEmail"></label>
        <input type="text" asp-for="ConfirmEmail" class="form-control" placeholder="confirm email" />
        <span asp-validation-for="ConfirmEmail"></span>

    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="enter password" />
        <span asp-validation-for="Password"></span>

    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="confirm password" />
        <span asp-validation-for="ConfirmPassword"></span>

    </div>

    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input type="date" asp-for="BirthDate" class="form-control" placeholder="enter birth date" />
        <span asp-validation-for="BirthDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfTickets"></label>
        <input type="number" asp-for="NumberOfTickets" class="form-control" placeholder="1 to 10 tickets" />
        <span asp-validation-for="NumberOfTickets"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
