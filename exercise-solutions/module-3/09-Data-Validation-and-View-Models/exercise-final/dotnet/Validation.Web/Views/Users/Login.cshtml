@using Validation.Web.Models;
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form asp-controller="Users" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" placeholder="enter email" />
        <span asp-validation-for="Email"></span>        
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" placeholder="enter password" />
        <span asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>